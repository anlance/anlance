<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_3_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_1" />

        <ImageView
            android:id="@+id/small_3_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_2" />

        <ImageView
            android:id="@+id/small_3_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_3" />

        <ImageView
            android:id="@+id/small_3_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_4" />

        <ImageView
            android:id="@+id/small_3_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_5" />

        <ImageView
            android:id="@+id/small_3_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/swan"
            android:src="@drawable/s3_6" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>